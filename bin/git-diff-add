#!/bin/bash

set -e

PROJECT_DIR=`git rev-parse --show-toplevel`
FILES=`git ls-files --modified $PROJECT_DIR`

ask() {
    file="$1"
    echo -n "add, ignore, checkout or quit [A/i/c/q]: "
    read name
    name=${name:-A}

    case "$name" in
        "A"|"a")
            git add $file
        ;;
        "I"|"i")
            return
        ;;
        "C"|"c")
            git checkout -- $file
        ;;
        "Q"|"q")
            exit
        ;;
        *)
            git add $file
        ;;
    esac
}

for file in $FILES; do
    clear
    echo $file
    git diff $file
    ask $file
done
